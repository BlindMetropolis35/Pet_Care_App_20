                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Donate"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/insurance_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/doctor3_cardview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="50dp"
                            android:layout_margin="15dp"
                            android:elevation="4dp"
                            android:radius="16dp">

                            <ImageView
                                android:id="@+id/doctor3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/find_insurance" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Buy Insurance"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_med_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/doctor4_cardview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="50dp"
                            android:layout_margin="15dp"
                            android:elevation="4dp"
                            android:radius="16dp">

                            <ImageView
                                android:id="@+id/doctor4"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/find_medicine" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Buy medicine"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
