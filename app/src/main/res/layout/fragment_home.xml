                                    android:layout_height="100dp" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/doctorimg2_title"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/findAVet3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/doctor3_cardview22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                android:layout_margin="5dp"
                                android:elevation="4dp"
                                android:radius="16dp">

                                <ImageView
                                    android:id="@+id/doctorimg3"
                                    android:src="@drawable/doctorprofile"
                                    android:scaleType="centerCrop"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/doctorimg3_title"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/findAVet4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/doctor4_cardview22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                android:layout_margin="5dp"
                                android:elevation="4dp"
                                android:radius="16dp">

                                <ImageView
                                    android:id="@+id/doctorimg4"
                                    android:src="@drawable/doctorprofile"
                                    android:scaleType="centerCrop"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/doctorimg4_title"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/findAVet5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/doctor6_cardview22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                android:layout_margin="5dp"
                                android:elevation="4dp"
                                android:radius="16dp">

                                <ImageView
                                    android:id="@+id/doctorimg5"
                                    android:src="@drawable/doctorprofile"
                                    android:scaleType="centerCrop"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp" />

                            </androidx.cardview.widget.CardView>

                            <TextView
